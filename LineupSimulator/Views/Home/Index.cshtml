@{
    ViewBag.Title = "Simulator";
}
    <!-- Simulation portion of page -->
    <div id="divSimulate">
        <div>
            <div style="display:inline-block"><h4>SIMULATE - Enter statistics for players 1-9 in the boxes below.</h4></div>
            <div style="display:inline-block" class="pull-right"><img id='indicator' style='display:none' src="@Url.Content("~/Content/Images/indicator.gif")" /><a id="simbutton" class="simbutton">Run Simulation &rarr;</a></div>
        </div>
        <!-- Error Div -->
        <div id="errorDiv" class="alert alert-warning" role="alert" style="display:none;"></div>
        <!-- Entry table layout -->
        <table id="lineupgridfull" class="table">
            <thead>
                <tr>
                    <th>Order</th>
                    <th></th> <!-- For moving entry -->
                    <th>Name</th>
                    <th>AB</th>
                    <th>H</th>
                    <th>2B</th>
                    <th>3B</th>
                    <th>HR</th>
                    <th>BB</th>
                    <th>SB</th>
                    <th>CS</th>
                    <th></th> <!-- For removing entry --> 
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <!-- Results portion of page -->
    <div id="divResults" style="display:none">
        <div>
             <div style="display:inline-block"><h4>RESULTS - See results from the simulation below.</h4></div> 
             <div style="display:inline-block" class="pull-right"><a id="backbutton" class="simbutton">&larr; Re-enter Stats</a></div>
        </div>
        <!-- Team summary -->
        <div class="alert alert-success" role="alert">Lineup produces a median of <span id="medianRuns" class="runNum"></span> runs per simulated season (<span id="medianRunsGame" class="runNum"></span> runs per game), with a "likely" range of <span id="minRuns" class="runNum"></span> (<span id="minRunsGame" class="runNum"></span>) to <span id="maxRuns" class="runNum"></span> (<span id="maxRunsGame" class="runNum"></span>) runs per season (game).</div>
        <!-- Player stats -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>PLAYER RESULTS</strong> using <input id="playerResultGames" type="text" style="display:inline-block" class="smallinput form-control" value="150"/> games played.  <button id="btnUpdatePlayerResults" class="btn btn-primary" style="margin-left:10px">Update</button>
            </div>
        
            <table id="resultsfull" class="table">
                <thead>
                    <tr>
                        <th>Order</th>
                        <th>Name</th>
                        <th>R (Median)</th>
                        <th>R (Range)</th>
                        <th>RBI (Median)</th>
                        <th>RBI (Range)</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

